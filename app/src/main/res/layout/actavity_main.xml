<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<Button
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerInParent="true"
    android:textSize="15sp"
    android:text="click"
    android:id="@+id/btn_click"
    ></Button>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_700"
       android:layout_toEndOf="@id/btn_click"
        android:layout_alignTop="@id/btn_click"></Button>
<Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@color/purple_700"
    android:layout_toStartOf="@id/btn_click"
    android:layout_alignBottom="@id/btn_click">

</Button>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_700"
        android:layout_alignEnd="@id/btn_click"
        android:layout_below="@id/btn_click">

    </Button>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_700"
        android:layout_alignStart="@id/btn_click"
        android:layout_above="@id/btn_click">

    </Button>

</RelativeLayout>